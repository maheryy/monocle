// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("MONOCLE_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  app       String
  userId    String
  name      String
  payload   Json
  createdAt DateTime @default(now())

  @@map("events")
}

model Metric {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  app       String
  userId    String
  name      String
  value     Float
  createdAt DateTime @default(now())

  @@map("metrics")
}

model Dimension {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  app       String
  userId    String
  name      String
  value     String
  createdAt DateTime @default(now())

  @@map("dimensions")
}

model User {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  email      String      @unique
  password   String
  firstName  String
  lastName   String
  role       String      @default("user")
  profile    Profile?
  credential Credential?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@map("users")
}

model Profile {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  kbis      String
  company   String
  phone     String
  address   String
  website   String
  userId    String   @unique @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("profiles")
}

model Credential {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  publicKey String   @unique
  secretKey String   @unique
  userId    String   @unique @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("credentials")
}
